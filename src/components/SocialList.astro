---
import { Icon } from "astro-icon/components";
import { socialLinks } from "@/site-config";
---

<div class="flex flex-wrap items-end gap-x-2">
	<ul class="flex flex-1 items-center gap-x-2 sm:flex-initial">
		{
			socialLinks.map(({ friendlyName, link, name }) => (
				<li class="flex">
					<a class="inline-block p-1 sm:hover:text-link" href={link} rel={`noopener noreferrer`} target="_blank">
						<Icon aria-hidden="true" class="h-6 w-6" focusable="false" name={name} />
						<span class="sr-only">{friendlyName}</span>
					</a>
				</li>
			))
		}
	</ul>
</div>
